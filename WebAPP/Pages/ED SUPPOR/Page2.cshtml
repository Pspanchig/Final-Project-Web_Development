@page
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/LockPageStyle.css">
    <script src="~/js/register.js" type="module"></script>
    <title>Crear Cuenta</title>
</head>
<body>
    <div class="Main-Container">
            <div class="Imgs">
                <img src="~/imgs/MainPage_Logo.png" alt="MainLogo">
            </div>
            
        <div class="LogIn">
            <form id="registerForm">
            <h2>Crear Cuenta</h2>
                <div>
                    <label for="username">Nombre de Usuario:</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div>
                    <label for="password">Contraseña:</label>
                    <input type="password" id="password" name="password" required>
                    <!-- <input type="password" id="confirmPassword" name="confirmPassword" required> -->
                </div>
                <div>
                    <input type="radio" id="option1" name="option" value="Opción 1" required>
                <label for="option1">Opción 1</label>
                    <div id="codeSection" style="display: none;">
                        <label for="code">Ingresa el código para Opción 1:</label>
                        <input type="text" id="code" name="code">
                    </div>
                    <label for="option2">Opción 2</label>
                    <input type="radio" id="option2" name="option" value="Opción 2">            
                </div>
                <div id="codeSection" style="display: none;">
                    <label for="code">Ingresa el Código para Opción 1:</label>
                    <input type="text" id="code" name="code">
                </div>
                <div>
                    <button type="submit">Crear Cuenta</button>            
                </div>
            </form>
            <a href="Page1h">
                <button type="button">Regresar</button>
            </a>
        </div>    
    </div>
</body>
</html>
